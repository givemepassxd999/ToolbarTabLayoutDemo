<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DesignAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4092ef</item>
        <item name="colorPrimaryDark">#4092ef</item>
        <item name="colorAccent">#FF4081</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/menu_edit</item>
    </style>
    <style name="menu_edit">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="toolbar_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="tab_layout">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
